<div class="form-group row">
    <label class="col-form-label col-sm-2" for="question">Question</label>
    <div class="col-sm-8">
        <input readonly class="form-control" id="question" value="<%= model.question %>" />
    </div>
</div>


<div class="form-group row">
    <label class="col-form-label col-sm-2" for="reponse">Response</label>
    <div class="col-sm-10">
        <textarea readonly class="form-control" cols="20" id="reponse" maxlength="32000" rows="7"><%= model.reponse %></textarea>
    </div>
</div>